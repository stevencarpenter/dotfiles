{
  "$schema": "https://opencode.dev/schema/config.json",
  "version": "1.0.0",
  "defaults": {
    "model": "lmstudio/qwen2.5-coder-32b-instruct",
    "baseUrl": "http://127.0.0.1:1234/v1",
    "temperature": 0.7,
    "maxTokens": 8192,
    "timeout": 300
  },
  "providers": {
    "lmstudio": {
      "type": "openai-compatible",
      "baseUrl": "http://127.0.0.1:1234/v1",
      "apiKey": "${LMSTUDIO_API_KEY:-sk-lmstudio}",
      "models": [
        "qwen2.5-coder-32b-instruct",
        "deepseek-coder-v2",
        "codellama-34b-instruct"
      ]
    },
    "openrouter": {
      "type": "openai-compatible",
      "baseUrl": "https://openrouter.ai/api/v1",
      "apiKey": "${OPENROUTER_TOKEN}",
      "models": [
        "anthropic/claude-sonnet-4",
        "openai/gpt-4o",
        "deepseek/deepseek-coder"
      ]
    },
    "openai": {
      "type": "openai",
      "apiKey": "${OPENAI_API_KEY}",
      "models": [
        "gpt-4o",
        "gpt-4-turbo",
        "gpt-3.5-turbo"
      ]
    }
  },
  "tools": {
    "allowedCategories": [
      "filesystem",
      "shell",
      "web",
      "git"
    ],
    "deniedPatterns": [],
    "requireConfirmation": false
  },
  "permissions": {
    "allowNetworkAccess": true,
    "allowShellExecution": true,
    "workingDirectoryOnly": false
  },
  "safeMode": {
    "enabled": false,
    "rules": {
      "noDeleteOutsideRepo": true,
      "noReadEnvFiles": false,
      "noNetworkCalls": false,
      "restrictedPaths": [
        "~/.ssh",
        "~/.gnupg",
        "~/.aws/credentials"
      ]
    }
  },
  "agents": {
    "defaultAgent": "coder",
    "customAgentsPath": "${XDG_CONFIG_HOME}/opencode/agents"
  },
  "commands": {
    "customCommandsPath": "${XDG_CONFIG_HOME}/opencode/commands"
  },
  "logging": {
    "level": "info",
    "outputPath": "${XDG_STATE_HOME}/opencode/logs"
  }
}
