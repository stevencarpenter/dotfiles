# -*- mode: gitconfig; -*-
# vim: set filetype=gitconfig:

[user]
    name = Steven Carpenter
    email = {{ .email }}

[core]
    excludesfile = ~/.gitignore_global
    editor = nvim

[alias]
wt = worktree
lswt = worktree list
mkwt = "!f() { git worktree add \"$(git rev-parse --show-toplevel)+$@\"; }; f"
rmwt = "!f() { git worktree remove \"$(git rev-parse --show-toplevel)+$@\"; }; f"
